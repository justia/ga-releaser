{
  "name": "@justia/releaser",
  "version": "1.3.11",
  "description": "A script to generate releases and changelog",
  "keywords": [
    "justia",
    "release",
    "changelog",
    "internal",
    "tool",
    "github",
    "action"
  ],
  "homepage": "https://github.com/justia/front-end-projects/tree/master/packages/releaser#readme",
  "bugs": {
    "url": "https://github.com/justia/front-end-projects/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justia/front-end-projects.git",
    "directory": "packages/releaser"
  },
  "license": "MIT",
  "author": "Alonso Zuniga <alonso.zuniga@justia.com>",
  "main": "dist/index.js",
  "module": "./dist/index.js",
  "bin": {
    "jReleaser": "./dist/cli/index.js"
  },
  "exports": {
    ".": "./dist",
    "./plugins/calver.js": "./dist/plugins/calver.js",
    "./plugins/conventional-changelog.js": "./dist/plugins/conventional-changelog.js",
    "./plugins/git-config.js": "./dist/plugins/git-config.js",
    "./plugins/github.js": "./dist/plugins/github.js"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "postclean": "rimraf dist",
    "prepublishOnly": "safe-publish-latest",
    "rebuild": "npm run clean && npm run build",
    "status": "npm test",
    "poststatus": "npm run typecheck",
    "test": "ts-node --transpile-only ./test/requires.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@actions/core": "^1.8.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.1",
    "@octokit/plugin-rest-endpoint-methods": "^5.13.0",
    "@release-it/conventional-changelog": "^4.3.0",
    "calver": "~21.1.5",
    "conventional-recommended-bump": "^6.1.0",
    "release-it": "^14.14.3",
    "yaml": "^2.0.1"
  },
  "devDependencies": {
    "@justia/eslint-config-typescript": "^0.3.4",
    "@types/conventional-recommended-bump": "^6.1.0",
    "@types/tape-async": "^2.3.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "rimraf": "^3.0.2",
    "safe-publish-latest": "^2.0.0",
    "tape-async": "^2.3.0",
    "ts-node": "^10.7.0",
    "typescript": "~4.4.4"
  },
  "engines": {
    "node": ">=10.17",
    "npm": ">=5"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "e1266b1816eb9231375cc3c81067d8ceb1215bcc"
}
